<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activiti.Giohang"
    android:weightSum="10">

    <androidx.appcompat.widget.Toolbar
        android:background="#334856"
        app:title="Giỏ hàng"
        android:id="@+id/toolbargiohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Giỏ Hàng"
            android:textColor="#FFFF"
            android:textSize="22dp"></TextView>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textviewthongbao"
                android:textSize="30sp"
                android:text="Giỏ hàng bạn đang trống"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/listviewgiohang"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="10dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/duongcong"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textviewgiatien"
                android:layout_marginRight="120dp"
                android:textColor="#f20"
                android:text="Giá tiền:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="120dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textviewtongtien"
                    android:layout_marginRight="20dp"
                    android:textColor="#f20"
                    android:text="Tổng tiền"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

    <Button
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:text="Thanh toán"
        android:id="@+id/buttonthanhtoangiohang"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <Button
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:text="Tiếp tục mua hàng"
        android:id="@+id/buttontieptucmuahang"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
</LinearLayout>
</LinearLayout>